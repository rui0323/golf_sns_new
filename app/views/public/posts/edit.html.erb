<div class="new-background" >
  <div class="main-container col-4 pt-5 offset-4">
    <div class="box text-white">
      <h2 class="text-center">編集画面</h2>
      <%= form_with model: @post do |f| %>
        <h4>画像を選択</h4>
      <%= f.label :images, "画像をアップロード", class:"btn-gradient-simple mx-auto" %>
      <%= f.file_field :images, multiple: true, accept: "image/*",class: "image_form" %>
        <h4>タイトル</h4>
      <%= f.text_field :title, :size=>"30" %>
        <h4>本文</h4>
      <%= f.text_area :caption, :size=>"60x10"  %>
      <p>
        <%= f.submit '変更保存', class: "btn-gradient-simple mx-auto" %>
      </p>
      <% end %>
    </div>
  </div>
</div>