  <div class="main-container col-5 pt-2 offset-4">
    
   
    <h2>画像投稿フォーム</h2>
 
 
    <% if @post.errors.any? %>
   <%= @post.errors.count %>件のエラーが発生しました
   <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
 
    <%= form_with model: @post do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>タイトル</h4>
      <%= f.text_field :title, :size=>"30" %>
    <h4>説明</h4>
      <%= f.text_area :caption, :size=>"60x10" %>
    <p>
     <%= f.submit '投稿', class: "btn btn-outline-success" %>
     </p>
    <% end %>
   
  </div>
  
  