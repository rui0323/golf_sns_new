 <div class="container  px-8 px-sm-8">
　<p><span class="bg-lightsecondary">投稿一覧</span>
 　<table class="table ">
 　 <thead>
   　<tr>
  　　<th>ユーザーネーム</th>
    　<th>投稿ユーザー画像</th>
    　<th>タイトル</th>
    　<th>説明</th>
    　<th>詳細</th>
    　<th>コメント件数</th>
       <th>いいね</th>
     </tr>
  　</thead>

  　<tbody>
     <% @posts.each do |post| %>

     <tr>
      <th>
     <%= post.customer.name %></th>

     <th>
     <% if post.image.attached? %>
     <%= image_tag post.image, size: "50x50" %>
     <% else %>
     <%= image_tag 'no_image', size: "50x50" %>
     <% end %></th>

     <th><%= post.title %></th>
     <th><%= post.caption %></th>
     <th><%= link_to"詳細ページへ",post_path(post.id) %></th>
      <th><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></th>
     <th>
        <% if post.favorited_by?(current_customer) %>
        <p>
        <%= link_to posts_path(post), method: :delete do %>
        ♥<%= post.favorites.count %> いいね
         <% end %>
        </p>
        <% else %>
        <p>
        <%= link_to posts_path(post), method: :post do %>
        ♡<%= post.favorites.count %> いいね
        <% end %>
       </p>
        <% end %>
        </th>
     </tr>



     <% end %>
    </tbody>
   </table>
</div>