
     <div class="main-container col-7 pt-5 offset-5">
     <h2>会員情報編集</h2>




        <%= form_for(@customer) do |f| %>
        <div class="form-group">
        <%= f.label :氏名, class: "brown-border px-3" %>
         <div class="row">
         <%= f.text_field :name, class: "form-control offset-1 col-4"%>
        </div>
         </div>


        <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
         <div class="row">
        <%= f.email_field :email, class: "form-control offset-1 col-4"%>
        </div>
        </div>

         <div class="form-group">
          <%= f.label :自己紹介, class: "brown-border px-3" %>
         <div class="row">
          <%= f.text_area :body, class: "form-control offset-1 col-4"%>
         </div>
         </div>

         <div class="form-group">
          <%= f.label :アイコン画像, class: "brown-border px-3" %>
         <div class="row">
          <%= f.file_field :image, accept: "image/*" , class: "form-control offset-1 col-4"%>
         </div>
         </div>

        <div class="row">
          <%= f.submit "編集内容を保存する", class: "btn btn-outline-danger offset-3 mt-3" %>&emsp;
          <%= link_to"詳細ページへ戻る",customer_path(@customer), class: "btn btn-outline-danger" %>
         </div>
        <% end %>
         <%#= link_to "退会する" , unsubscribe_path(current_customer), class: "btn btn-outline-danger mt-auto" %>
   </div>
