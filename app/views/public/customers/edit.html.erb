    <div class="customer-background" >
     <div class="container col-7 pt-5 offset-4">
       <div class="box text-white">
     <h2>ユーザー情報編集</h2>




        <%= form_for(@customer) do |f| %>


         <div class="form-group">
             <%= f.label :image, "画像をアップロード", class: "btn btn-outline-success" %>
         <div class="row">
          <%= f.file_field :image, accept: "image/*" ,class: "image_form" %>
         </div>
         </div>



        <div class="form-group">
        <%= f.label :氏名, class: "brown-border px-3" %>
         <div class="row">
         <%= f.text_field :name, class: "form-control offset-1 col-4"%>
        </div>
         </div>


        <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
         <div class="row">
        <%= f.email_field :email, class: "form-control offset-1 col-4"%>
        </div>
        </div>

         <div class="form-group">
          <%= f.label :自己紹介, class: "brown-border px-3" %>
         <div class="row">
          <%= f.text_area :body, :size=>"5x5", class: "form-control offset-1 col-4"%>
         </div>
         </div>



          <div class="row offset-1 ">
          <%= f.submit "編集を保存する", class: "btn btn-outline-danger" %>&emsp;
          <%= link_to"詳細ページへ戻る",customer_path(@customer), class: "btn btn-outline-danger" %>
          </div>
          <% end %>
         
   </div>
  </div>
   </div>