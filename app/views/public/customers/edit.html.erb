<div class="customer-background" >
  <div class="container col-6 pt-5 offset-3">
    <div class="box text-white">
      <div class="col text-white">
        <h2 class= "text-center">ユーザー情報編集</h2>
          <%= form_for(@customer) do |f| %>

          <%= f.label :image, "画像をアップロード", class: "btn-gradient-simple   offset-2 col-4 text-center" %>
          <%= f.file_field :image, accept: "image/*" ,class: "image_form" %>

          <div class="form-group">
            <%= f.label :氏名, class: "brown-border px-3" %>
            <%= f.text_field :name, class: "form-control offset-2 col-6"%>
          </div>

          <div class="form-group">
            <%= f.label :メールアドレス, class: "brown-border px-3" %>
            <%= f.email_field :email, class: "form-control offset-2 col-6"%>
          </div>

          <div class="form-group">
            <%= f.label :自己紹介, class: "brown-border px-3" %>
            <%= f.text_area :body, :size=>"5x5", class: "form-control offset-2 col-6"%>
          </div>

          <div class="row  ">
            <%= f.submit "編集を保存する", class: "btn-gradient-simple offset-2 col-3" %>&emsp;
            <%= link_to"詳細ページへ戻る",customer_path(@customer), class:  "btn-gradient-simple offset-1 col-3" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>