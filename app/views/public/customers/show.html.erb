<div class="container">
  <div class="row">
   <div class="col-5 mt-5 pt-5">
     <% if @customer == current_customer %>
     <h2>マイページ</h2>
      <% else %>
        <h2>	<%= @customer.name %>詳細画面</h2>
         <% end %>
       <div>
         <% if @customer == current_customer %>
        <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-outline-success mx-auto my-1" %>&emsp;
        <%= link_to "一覧画面へ",customers_path, class: "btn btn-outline-success mx-auto my-1" %>&emsp;
         <% else %>
           <p></p>
         <% end %>

         <% if current_customer.following?(@customer) %>
             <%= link_to "フォロー中", customer_relationships_path(@customer.id), class: "btn btn-outline-success mx-auto my-1", method: :delete %>
             <% else %>
             <%= link_to "フォローする", customer_relationships_path(@customer.id), class: "btn btn-outline-success mx-auto my-1", method: :post %>
             <% end %>

         <table class="table table-borderless">
           <tr>
		          <td>氏名</td>
					       <td>	<%= @customer.name %></td>
           </tr>

           <tr>
          　 <td>メールアドレス</td>
            <td><%= @customer.email %></td>
           </tr>

           <tr>
             <td>自己紹介</td>
             <td><%= @customer.body %></td>
           </tr>

           <tr>
             <td>アイコン</td>
             <td><% if @customer.image.attached? %>
             <%= image_tag @customer.image, size: "100x100" %>
             <% else %>
             <%= image_tag 'no_image', size: "100x100" %>
             <% end %></td>
           </tr>

           <tr>
             <td><%= link_to "フォロー数", customer_followings_path(@customer.id) %>:<%= @customer.followings.count %></td>
             <td><%= link_to "フォロワー数",customer_followers_path(@customer.id)  %>:<%= @customer.followers.count %></td>
           </tr>


         </table>

       </div>
     </div>

     <div class="col-7 mt-5 pt-5">
        <h2>投稿一覧</h2>
         <table class="table table-borderless">
          <tbody>
           <% @posts.each do |post| %>

            <tr>
             <th>
              <%= link_to  post.customer.name,customer_path(post.customer.id) %></th>
            <th>
             <% if post.image.attached? %>
             <%= image_tag post.image, size: "50x50" %>
             <% else %>
             <%= image_tag 'no_image', size: "50x50" %>
             <% end %>
            </th>

            <th><%= post.title %></th>
            <th><%= post.caption %></th>
            <th><%= link_to"詳細ページへ",post_path(post.id) %></th>
            <th><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></th>
            <th>
               <% if post.favorited_by?(current_customer) %>
               <p>
               <%= link_to post_favorites_path(post), method: :delete do %>
               ♥<%= post.favorites.count %> いいね
               <% end %>
               </p>
               <% else %>
               <p>
               <%= link_to post_favorites_path(post), method: :post do %>
               ♡<%= post.favorites.count %> いいね
               <% end %>
              </p>
               <% end %>
             </th>
          </tr>

     <% end %>
    </tbody>
　　　　　<p><%=link_to"いいね一覧",favorites_customer_path(@customer) %></p>
             <%#= render "follow_post" %>
         </table>
      </div>
   </div>
 </div>