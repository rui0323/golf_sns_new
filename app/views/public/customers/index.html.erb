

 <div class="container  px-8 px-sm-8">
　<p><span class="bg-lightsecondary">会員一覧</span>
 　<table class="table ">
 　 <thead>
   　<tr>
  　　<th>image</th>
    　<th>name</th>
    　<th></th>
    　<th>follow</th>
     </tr>
  　</thead>
              <%#= image_tag book.get_image %>

    <tbody>
　　　<% @customers.each do |customer| %>
          <tr>
            <th> <% if customer.image.attached? %>
             <%= image_tag customer.image, size: "50x50" %>
             <% else %>
             <%= image_tag 'no_image', size: "50x50" %>
             <% end %></th>
            <th><%= customer.name %></th>
            <th><%= link_to"詳細ページへ",customer_path(customer.id) %></th>

           <th id="follow-<%= customer.id %>-ajax">
           <%= render "public/shared/follow", customer: customer %>
            </th>

          </tr>

          <% end%>


    </tbody>

   </table>
 </div>