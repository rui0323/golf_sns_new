<!DOCTYPE html>
<html>
  <head>
    <title>GolfSns</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>GOLF SNS</span></a>
           <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <li>
              <%#= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-danger" %>
              <%#= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-danger" %>
              <%#= link_to "TOP", root_path, class: "btn btn-outline-danger" %>
              <%#= link_to"マイページ",customer_path(@customer), class: "btn btn-outline-danger" %>
              <%#= link_to "会員一覧",customers_path, class: "btn btn-outline-danger mx-auto my-1" %>&emsp;
              <%#= link_to "投稿画面へ", new_post_path, class: "btn btn-outline-danger mx-auto my-1" %>&emsp;
              <%#= link_to "投稿一覧", posts_path, class: "btn btn-outline-danger" %>
              <%#= link_to destroy_customer_session_path, method: :delete, class: "nav-link text-light" do %>

              <%# end %>
              </li>
              <%#= link_to  customer_path(current_customer.id),class: "nav-link text-light" do %>
              <i class="fas fa-home"></i>
              <%# end %>
              <% if admin_signed_in? %>
              <%= render 'layouts/signin_admin_header' %>
              <% elsif customer_signed_in? %>
              <%= render 'layouts/signin_customer_header' %>
              <% else %>
              <%= render 'layouts/signout_header' %>
              <% end %>
            </ul>
           </div>
          </div>
        </nav>
      </header>
    <%= yield %>
    <footer class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container mt-5">
         <a class="navbar-brand" href="/"><span>GOLF SNS</span></a>
  	   <div class="row">
     	 <div class="mx-auto">
    
    　  </div>
    　  </div>
    　  </div>
  　　  </nav>
    </footer>
  </body>
</html>
