

<div class="container">
  <div class="row">



　　　<div class="col-6 mt-5 pt-5">
　　　 <h2>投稿詳細画面</h2>
       <table class="table table-borderless">

         <tr>
     　　　<td>タイトル</td>
     　     <td><%= @post.title %></td>
         </tr>
         <tr>
    　      <td>本文</td>
    　　　 <td><%= @post.caption %></td>
         </tr>
         <tr>
    　     <td>投稿画像</td>
    　   　<td><% if @post.image.attached? %>
          <%= image_tag @post.image, size: "100x100" %>
          <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
          <% end %></td>
         </tr>
       </table>
      </div>



   </div>
 </div>