<div class="container  px-8 px-sm-8">
　<p><span class="bg-lightsecondary">管理者用投稿一覧</span>
 　<table class="table ">
 　 <thead>
   　<tr>
  　　<th>ユーザーネーム</th>
    　<th>投稿ユーザー画像</th>
    　<th>タイトル</th>
    　<th>説明</th>
     </tr>
  　</thead>

  　<tbody>
     <% @posts.each do |post| %>

     <tr>
      <th>
     <%= post.customer.name %></th>

     <th>
     <% if post.image.attached? %>
     <%= image_tag post.image, size: "50x50" %>
     <% else %>
     <%= image_tag 'no_image', size: "50x50" %>
     <% end %></th>

     <th><%= post.title %></th>
     <th><%= post.caption %></th>
      <th><%= link_to"詳細ページへ",admin_post_path(post.id) %></th>
     </tr>

     <% end %>
    </tbody>
   </table>

</div>