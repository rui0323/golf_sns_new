
  <div class="container  px-8 px-sm-8">
    　<p><span class="bg-lightsecondary"><h2>管理者用会員一覧</h2></span>



  <table class="table table-hover table-dark">

  <thead>
    <tr>
     <th>image</th>
    　<th>name</th>
    　<th>詳細</th>
    　<th>フォロー数</th>
    　<th>フォロワー数</th>
      　<th colspan="3"></th>
    </tr>
  </thead>
              <%#= image_tag book.get_image %>

    <tbody>

　　　<% @customers.each do |customer| %>
          <tr>
            <th> <% if customer.image.attached? %>
             <%= image_tag customer.image, size: "50x50" %>
             <% else %>
             <%= image_tag 'no_image', size: "50x50" %>
             <% end %></th>
            <th><%= customer.name %></th>
            <th><%= link_to"会員情報",admin_customer_path(customer.id) %></th>
            <th><%= link_to "フォロー数",customer_followings_path(customer) %>:<%= customer.followings.count %></th>
            <th><%= link_to "フォロワー数",customer_followers_path(customer)  %>:<%= customer.followers.count %></th>
          </tr>
          <% end%>
          </tbody>
        </table>
        <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
      </div>