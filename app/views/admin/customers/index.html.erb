




  <div class="col-md-8 offset-md-1">  <!-- この行を追加 -->
  <h1>管理者用Users一覧</h1>


  <table class="table table-hover table-inverse">

  <thead>
    <tr>
     <th>image</th>
    　<th>name</th>
    　<th>詳細</th>
    　<th>フォロー数</th>
    　<th>フォロワー数</th>
      　<th colspan="3"></th>
    </tr>
  </thead>
              <%#= image_tag book.get_image %>

    <tbody>

　　　<% @customers.each do |customer| %>
          <tr>
            <th> <% if customer.image.attached? %>
             <%= image_tag customer.image, size: "50x50" %>
             <% else %>
             <%= image_tag 'no_image', size: "50x50" %>
             <% end %></th>
            <th><%= customer.name %></th>
            <th><%= link_to"詳細ページへ",admin_customer_path(customer.id) %></th>
            <th><%= link_to "フォロー数",customer_followings_path(customer) %>:<%= customer.followings.count %></th>
            <th><%= link_to "フォロワー数",customer_followers_path(customer)  %>:<%= customer.followers.count %></th>
          </tr>
          <% end%>
          </tbody>
        </table>
      </div>