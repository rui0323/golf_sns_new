
<div class="container">
  <div class="row">
    <div class="col-5 mt-5 pt-5 ">
      <h2>	<%= @customer.name %>詳細画面</h2>

       <div>
        <%#= link_to "編集する", edit_customer_path(@customer), class: "btn btn-outline-danger mx-auto my-1" %>&emsp;

       </div>

      <div>
       <table class="table table-borderless">
       <tr>
		     <td>氏名</td>
		     <td><%= @customer.name %></td>
       </tr>

      <tr>
       <td>メールアドレス</td>
       <td><%= @customer.email %></td>
      </tr>

       <tr>
          <td>自己紹介</td>
          <td><%= @customer.body %></td>
         </tr>

      <tr>
       <td>アイコン</td>
      <td><% if @customer.image.attached? %>
          <%= image_tag @customer.image, size: "100x100" %>
          <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
          <% end %></td>
      </tr>
      
      <tr>
          <td><%= link_to "フォロー数", customer_followings_path(@customer.id) %>:<%= @customer.followings.count %></td>
          <td><%= link_to "フォロワー数",customer_followers_path(@customer.id)  %>:<%= @customer.followers.count %></td>
      </tr>
      
       <tr>
          <th><%=link_to"いいね一覧",favorites_customer_path(@customer) %></th>
       </tr>
      
     </table>
     </div>
      </div>


        <div class="col-7 mt-5 pt-5">
        <h2>投稿一覧</h2>
       <table class="table table-borderless">

        <tbody>
     <% @posts.each do |post| %>

     <tr>
      <th>
     <%= link_to  post.customer.name,admin_customer_path(post.customer.id) %></th>

     <th>
     <% if post.image.attached? %>
     <%= image_tag post.image, size: "50x50" %>
     <% else %>
     <%= image_tag 'no_image', size: "50x50" %>
     <% end %></th>

     <th><%= post.title %></th>
     <th><%= post.caption %></th>
     <th><%= link_to"詳細ページへ",admin_post_path(post.id) %></th>
      <th><%= link_to "#{post.post_comments.count} コメント", admin_post_path(post.id) %></th>
     <th>
        <% if post.favorited_by?(post.customer) %>
        <p>
        <%= link_to post_favorites_path(post), method: :delete do %>
        ♥<%= post.favorites.count %> いいね
        <% end %>
        </p>
        <% else %>
        <p>
        <%= link_to post_favorites_path(post), method: :post do %>
        ♡<%= post.favorites.count %> いいね
        <% end %>
       </p>
        <% end %>
      </th>
     </tr>



     <% end %>
    </tbody>

             <%#= render "follow_post" %>
         </table>




   </div>
  </div>
 </div>
